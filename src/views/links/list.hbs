<div class="container p-4">
    <div class="row">

        {{#each links}}
            <div class="col-md-3">
                <div class="card">
                <div class="card-body">
                    <a href="{{url}}">
                        <h3 class="card-title text-uppercase">
                            {{title}}
                        </h3>
                    </a>
                        <p class="m-2">{{description}}</p>
                        <p>{{timeago created_at}}</p>
                    <a href="/links/delete/{{id}}" class="btn btn-primary btn-lg active" role="button" aria-pressed="true">Delete</a>
                    <a href="/links/edit/{{id}}" class="btn btn-secondary btn-lg active" role="button" aria-pressed="true">Edit</a>
                
                </div>
                </div>
            </div>
        {{else}}
        <div class="col-md-4 mx-auto">
            <div class="card card-body text-center">
                <p>Ya no quedan links guardados</p>
                <a href="/links/add">Agregar link</a>
            </div>
        </div>   
        {{/each}}

    </div>
</div>