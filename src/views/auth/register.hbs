<div class="contain p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <h3>Registro</h3>
                <div class="card-body">
                    <form action="/register" method="POST">
                        <div class="form-label">Nombre</div>
                        <div class="form-group">
                            <input type="text" name="name" placeholder="Name" class="form-control" autofocus>
                        </div>
                        <div class="form-label">Apellido</div>
                        <div class="form-group">
                            <input type="text" name="lastname" placeholder="Apellido" class="form-control" autofocus>
                        </div>
                        <div class="form-label">Telefono</div>
                        <div class="form-group">
                            <input type="number" name="phone" placeholder="1550002222" class="form-control" autofocus>
                        </div>
                        <div class="form-label">Email</div>
                        <div class="form-group">
                            <input type="email" name="email" placeholder="example@mail.com" class="form-control" autofocus>
                        </div>
                        <div class="form-label">Nombre de usuario</div>
                        <div class="form-group">
                            <input type="text" name="username" placeholder="Usuario" class="form-control">
                        </div>
                        <div class="form-label">Contrase√±a</div>
                        <div class="form-group">
                            <input type="password" name="password" placeholder="Password" class="form-control">
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                Registrar
                            </button>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>